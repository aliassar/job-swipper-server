{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    },
    "api/cron/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/sync-jobs",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/cron/process-timers",
      "schedule": "* * * * *"
    }
  ]
}
